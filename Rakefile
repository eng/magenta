begin
  require 'jeweler'
  Jeweler::Tasks.new do |gemspec|
    gemspec.name = "magenta"
    gemspec.summary = "Capistrano Lite: achieves painless deployments to a single server from your Git repository."
    gemspec.description = "Sometimes you don't need Capistrano.  Use this gem to simplify your deployments."
    gemspec.email = "cohen.jeff@gmail.com"
    gemspec.homepage = "http://github.com/JeffCohen/magenta"
    gemspec.authors = ["Jeff Cohen"]
    gemspec.add_dependency('net-ssh', '>= 2.0.11')
    gemspec.has_rdoc = false
  end
rescue LoadError
  puts "Jeweler not available. Install it with: sudo gem install technicalpickles-jeweler -s http://gems.github.com"
end
